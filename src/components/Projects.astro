---
import React from '@/assets/icons/React.astro'
import Tailwind from '@/assets/icons/Tailwind.astro'
import ExpButton from './ExpButton.astro'
import GitHubIcon from '@/assets/icons/GitHub.astro'
import NestIcon from '@/assets/icons/Nestjs.astro'
import PrismaIcon from '@/assets/icons/Prisma.astro'
import MongoIcon from '@/assets/icons/Mongo.astro'
import TypescriptIcon from '@/assets/icons/Typescript.astro'

const TAGS = {
  REACT: {
    name: 'React',
    class: 'bg-[#087EA4]/15 text-white',
    icon: React,
  },
  TYPESCRIPT: {
    name: 'TypeScript',
    class: 'bg-[#3178C6]/15 text-white',
    icon: TypescriptIcon,
  },
  TAILWIND: {
    name: 'Tailwind',
    class: 'bg-[#0EA5E9]/15 text-white',
    icon: Tailwind,
  },
  NEST: {
    name: 'NestJS',
    class: 'bg-[#E02316]/15 text-white',
    icon: NestIcon,
  },
  PRISMA: {
    name: 'Prisma',
    class: 'bg-[#2D3748]/70 text-white',
    icon: PrismaIcon,
  },
  MONGO: {
    name: 'MongoDB',
    class: 'bg-[#00ED64]/15 text-white',
    icon: MongoIcon,
  },
}

const PROJECTS = [
  {
    title: 'ATM Simulator',
    description:
      'Both Frontend and Backend created from scratch. I used React, TypeScript, and Tailwind. DB in Mongo DB. Backend in Node.js with Nest',
    link: 'https://atm-simulator-frontend.vercel.app/',
    github: [
      'https://github.com/alexpintodiaz/atm-simulator-frontend',
      'https://github.com/alexpintodiaz/atm-simulator-backend',
    ],
    image: '/projects/atmsim.png',
    // tags: ['React', 'TypeScript', 'Tailwind', 'MongoDB', 'Node.js', 'Nest'],
    tags: [
      TAGS.REACT,
      TAGS.NEST,
      TAGS.PRISMA,
      TAGS.MONGO,
      TAGS.TYPESCRIPT,
      TAGS.TAILWIND,
    ],
  },
]
---

<div class='flex flex-col gap-y-16'>
  {
    PROJECTS.map(({ title, description, link, github, image, tags }) => (
      <article class='flex flex-col space-x-0 space-y-8 md:flex-row md:space-x-8 md:space-y-0 mb-8'>
        <div class='w-full md:w-1/2'>
          <img
            loading='lazy'
            class='rounded-md shadow-2xl shadow-white/10 aspect-video'
            src={image}
            alt={`Screenshot of ${title}`}
          />
        </div>

        <div class='w-full md:w-1/2 md:max-w-lg'>
          <h3 class='text-lg font-semibold text-neutral-200 dark:text-white'>
            {title}
          </h3>
          <div>
            <ul class='flex flex-row flex-wrap gap-x-2'>
              {tags.map((tag) => (
                <li>
                  <span
                    class={`flex gap-x-1.5 rounded-full text-sm ${tag.class} py-1 my-1 px-1.5 border border-white/10`}>
                    <tag.icon class='size-4 mt-0.5' />
                    {tag.name}
                  </span>
                </li>
              ))}
            </ul>
            <p class='text-base font-normal text-gray-200 text-pretty'>
              {description}
            </p>
            <footer class='mt-2'>
              {github && (
                <ExpButton href={github[0]}>
                  <GitHubIcon class='size-6' />
                  Code
                </ExpButton>
              )}
            </footer>
          </div>
        </div>
      </article>
    ))
  }
</div>
