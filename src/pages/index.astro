---
import AboutMe from '@/components/AboutMe.astro'
import Experience from '@/components/Experience.astro'
import Layout from '@/layouts/Layout.astro'
import Main from '@/components/Main.astro'
import Projects from '@/components/Projects.astro'
import SectionContainer from '@/components/SectionContainer.astro'
import Title from '@/components/Title.astro'
---

<Layout
  title='Alex Portfolio - Web Developer and Programmer'
  description='Hire Alex to create your web application. Web Developer. Specialized in creating fullstack applications.'>
  <main class='px-4'>
    <SectionContainer class='pt-12 pb-8'>
      <Main />
    </SectionContainer>

    <SectionContainer id='experience'>
      <Title>Experience</Title>
      <Experience />
    </SectionContainer>

    <SectionContainer id='projects' class='mt-12'>
      <Title>Projects</Title>
      <Projects />
    </SectionContainer>

    <SectionContainer id='about'>
      <Title>About me</Title>
      <AboutMe />
    </SectionContainer>
  </main>
</Layout>
